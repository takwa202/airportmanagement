@model IEnumerable<AM.ApplicationCore.Domain.plane>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManifactureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManifactureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.planeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.planeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.planeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
